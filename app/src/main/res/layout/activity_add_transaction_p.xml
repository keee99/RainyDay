<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bk_color"
    android:focusableInTouchMode="true"
    android:gravity="top"
    tools:context=".AddTransactionParent">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_login_hero"
            android:focusableInTouchMode="true"

            tools:context=".HomeParent1">

            <TextView
                android:id="@+id/hello_tina_"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="-10dp"
                android:gravity="left"
                android:textSize="30sp"
                android:paddingTop="25dp"
                android:text="@string/hello_tina_"
                android:textAppearance="@style/hello_tina_"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/balance_79_"
                android:layout_width="101dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="278dp"
                android:layout_marginTop="70dp"
                android:gravity="top"
                android:textAppearance="@style/balance_79_"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tommy_is_on"
                android:layout_width="204dp"
                android:layout_height="79dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="70dp"
                android:gravity="top"
                android:textSize="17sp"
                android:text="@string/tommy_is_on"
                android:textAppearance="@style/tommy_is_on" />




        </RelativeLayout>






            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                android:id="@+id/Home"
                style="@style/home"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:text="Home"
                android:textSize="15sp"
                android:textColor="@color/pinkParent"
                app:initialCornerAngle="27dp"
                app:spinning_bar_color="#FFFF"
                app:spinning_bar_padding="6dp"
                app:spinning_bar_width="4dp"
                android:onClick = "onLoginClick"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal"
                ></LinearLayout>

            <TextView
                android:id="@+id/Enter_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Enter the following details:"
                android:textColor="#FFA69E"
                android:textIsSelectable="false"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"></LinearLayout>



            <com.google.android.material.textfield.TextInputLayout

                style="@style/parent"
                android:layout_marginTop="@dimen/loginViewsMargin">

                <EditText
                    style="@style/modifiedEditText2"
                    android:id="@+id/Transaction_Amount"
                    android:inputType="numberDecimal"
                    android:hint="Transaction amount"
                    android:maxLength="8"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"></LinearLayout>


            <com.google.android.material.textfield.TextInputLayout

                style="@style/parent"
                android:layout_marginTop="@dimen/loginViewsMargin">

                <EditText
                    style="@style/modifiedEditText2"
                    android:id="@+id/Transaction_Category"
                    android:inputType="textPersonName"
                    android:hint="Transaction category"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"></LinearLayout>



            <com.google.android.material.textfield.TextInputLayout

                style="@style/parent"
                android:layout_marginTop="@dimen/loginViewsMargin">

                <EditText
                    style="@style/modifiedEditText2"
                    android:id="@+id/Item_Purchased"
                    android:inputType="textPersonName"
                    android:hint="Item purchased"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"></LinearLayout>



            <com.google.android.material.textfield.TextInputLayout

                style="@style/parent"
                android:layout_marginTop="@dimen/loginViewsMargin">

<!--                <EditText-->
<!--                    style="@style/modifiedEditText2"-->
<!--                    android:id="@+id/Name_of_store"-->
<!--                    android:inputType="textPersonName"-->
<!--                    android:hint="Transaction Notes"-->
<!--                    android:maxLines="1" />-->

            </com.google.android.material.textfield.TextInputLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:orientation="horizontal"></LinearLayout>



            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                android:id="@+id/Next"
                style="@style/topUpButton"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:text="Next"
                android:textSize="15sp"
                android:textColor="@color/whiteTextColor"
                app:initialCornerAngle="27dp"
                app:spinning_bar_color="#FFFF"
                app:spinning_bar_padding="6dp"
                android:paddingBottom="20dp"
                app:spinning_bar_width="4dp"
                android:onClick = "onLoginClick"
                />





        </LinearLayout>

    </ScrollView>

</RelativeLayout>
